{
  "name": "macos-sonoma-video-downloader",
  "version": "1.0.5",
  "private": true,
  "main": "src/electron/main.js",
  "homepage": "./",
  "author": "Your Name",
  "description": "macOS Video Downloader",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tauri": ". \"$HOME/.cargo/env\" && tauri",
    "tauri:dev": ". \"$HOME/.cargo/env\" && tauri dev",
    "tauri:build": ". \"$HOME/.cargo/env\" && tauri build",
    "tauri:build:universal": ". \"$HOME/.cargo/env\" && tauri build --target universal-apple-darwin",
    "build:sign": "./build-and-sign.sh",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish=always"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-http": "^2",
    "@tauri-apps/plugin-process": "^2",
    "@tauri-apps/plugin-updater": "^2",
    "bplist-parser": "^0.3.2",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.2",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.yourdomain.macossonoma-downloader",
    "productName": "macOS Video Downloader",
    "files": [
      "build/**/*",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "src/electron/main.js"
    },
    "icon": "public/icon.png",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "macos-sonoma-video-downloader"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
