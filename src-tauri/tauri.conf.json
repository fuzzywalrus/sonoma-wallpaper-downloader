{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "macOS Video Downloader",
  "version": "1.0.5",
  "identifier": "com.greggant.svd",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "macOS Video Downloader",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://sylvan.apple.com https://assets.codepen.io data: blob:; connect-src 'self' ipc: https://sylvan.apple.com https://assets.codepen.io; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'",
      "capabilities": ["main"],
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "14.0",
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": "Developer ID Application: Greg Gant (36SA478KNK)",
      "providerShortName": "36SA478KNK",
      "entitlements": "entitlements.plist"
    },
    "publisher": "Greg Gant",
    "category": "Utility"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/fuzzywalrus/sonoma-wallpaper-downloader/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
